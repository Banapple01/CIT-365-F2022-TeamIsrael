@page
@model SacramentPlanner.Pages.Planners.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<form>
    <p>
        Date: <input type="text" asp-for="SearchString" />
    </p>
    <p>
        Sort: <br>
        <input type="radio" asp-for="SortString" id="conducting" name="sorting" value="Conducting">
        <label for="conducting">Conducting</label><br>
        <input type="radio" asp-for="SortString" id="date" name="sorting" value="Date">
        <label for="date">Date</label><br>
        <input type="radio" asp-for="SortString" id="presiding" name="sorting" value="Presiding">
        <label for="presiding">Presiding</label>
    </p>
    <p>
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Planner[0].PlannerDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Planner[0].Conducting)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Planner[0].Presiding)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Planner) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PlannerDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Conducting)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Presiding)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
