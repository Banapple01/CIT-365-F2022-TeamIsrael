@page
@model SacramentPlanner.Pages.Planners.EditModel

@{
    ViewData["Title"] = "Edit";
}
<style>
    #wrapper {
        max-width: 500px;
        min-width: 450px;
        margin: 30px auto;
    }

    .formWrap {
        border: solid black 2px;
        border-radius: 8px;
        padding: 15px;
        width: 100%;
    }

    .formRow {
        display: flex;
        padding: 7px 0;
    }

    .column {
        padding: 0 5px;
    }

    .third {
        width: 50%;
    }

    .half {
        width: 50%;
    }

    .twoThird {
        width: 100%;
    }

    .buttonWrap {
        margin: 30px auto 0 auto;
        width: 500px;
        display: flex;
        justify-content: space-around;
    }

    .addButton {
        background: #000000;
        border-radius: 8px;
        color: #ffffff;
        height: 40px;
        width: 120px;
        text-align: center;
    }

        .addButton:hover {
            background: #333333;
        }

    .buttonWrap a {
        text-decoration: none;
        line-height: 40px;
    }
</style>

<h1>Edit Sacrament Meeting Plan </h1>

<h4>@Html.DisplayFor(model => model.Planner.PlannerDate)</h4>
<hr />
<div id="wrapper">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="formWrap">
            <div class="formRow">
                <div class="form-group column twoThird " id="plannerDate">
                    <label asp-for="Planner.PlannerDate" class="control-label"></label>
                    <input asp-for="Planner.PlannerDate" class="form-control" />
                    <span asp-validation-for="Planner.PlannerDate" class="text-danger"></span>
                </div>
            </div>
            <div class="formRow">
                <div class="form-group column third" id="presiding">
                    <label asp-for="Planner.Presiding" class="control-label"></label>
                    <input asp-for="Planner.Presiding" class="form-control" />
                    <span asp-validation-for="Planner.Presiding" class="text-danger"></span>
                </div>
                <div class="form-group column third" id="conducting">
                    <label asp-for="Planner.Conducting" class="control-label"></label>
                    <input asp-for="Planner.Conducting" class="form-control" />
                    <span asp-validation-for="Planner.Conducting" class="text-danger"></span>
                </div>
            </div>
            <div class="formRow">
                <div class="form-group column third" id="openingHymn">
                    <label asp-for="Planner.OpeningHymn" class="control-label"></label>
                    <input asp-for="Planner.OpeningHymn" class="form-control" />
                    <span asp-validation-for="Planner.OpeningHymn" class="text-danger"></span>
                </div>
                <div class="form-group column third" id="openingPrayer">
                    <label asp-for="Planner.OpeningPrayer" class="control-label"></label>
                    <input asp-for="Planner.OpeningPrayer" class="form-control" />
                    <span asp-validation-for="Planner.OpeningPrayer" class="text-danger"></span>
                </div>
            </div>
            <div class="formRow">
                <div class="form-group column twoThird" id="sacramentHymn">
                    <label asp-for="Planner.SacramentHymn" class="control-label"></label>
                    <input asp-for="Planner.SacramentHymn" class="form-control" />
                    <span asp-validation-for="Planner.SacramentHymn" class="text-danger"></span>
                </div>
            </div>
            <div class="formRow">
                <div class="form-group column third" id="speaker1">
                    <label asp-for="Planner.Speaker1" class="control-label"></label>
                    <input asp-for="Planner.Speaker1" class="form-control" />
                    <span asp-validation-for="Planner.Speaker1" class="text-danger"></span>
                </div>
                <div class="form-group column third" id="topic1">
                    <label asp-for="Planner.Topic1" class="control-label"></label>
                    <input asp-for="Planner.Topic1" class="form-control" />
                    <span asp-validation-for="Planner.Topic1" class="text-danger"></span>
                </div>
            </div>
            <div class="formRow">
                <div class="form-group column third" id="speaker2">
                    <label asp-for="Planner.Speaker2" class="control-label"></label>
                    <input asp-for="Planner.Speaker2" class="form-control" />
                    <span asp-validation-for="Planner.Speaker2" class="text-danger"></span>
                </div>
                <div class="form-group column third" id="topic2">
                    <label asp-for="Planner.Topic2" class="control-label"></label>
                    <input asp-for="Planner.Topic2" class="form-control" />
                    <span asp-validation-for="Planner.Topic2" class="text-danger"></span>
                </div>
            </div>
            <div class="formRow">
                <div class="form-group column twoThird" id="intermediateHymn">
                    <label asp-for="Planner.IntermediateHymn" class="control-label"></label>
                    <input asp-for="Planner.IntermediateHymn" class="form-control" />
                    <span asp-validation-for="Planner.IntermediateHymn" class="text-danger"></span>
                </div>
            </div>
            <div class="formRow">
                <div class="form-group column third" id="speaker3">
                    <label asp-for="Planner.Speaker3" class="control-label"></label>
                    <input asp-for="Planner.Speaker3" class="form-control" />
                    <span asp-validation-for="Planner.Speaker3" class="text-danger"></span>
                </div>
                <div class="form-group column third" id="topic3">
                    <label asp-for="Planner.Topic3" class="control-label"></label>
                    <input asp-for="Planner.Topic3" class="form-control" />
                    <span asp-validation-for="Planner.Topic3" class="text-danger"></span>
                </div>
            </div>
            <div class="formRow">
                <div class="form-group column third" id="closingHymn">
                    <label asp-for="Planner.ClosingHymn" class="control-label"></label>
                    <input asp-for="Planner.ClosingHymn" class="form-control" />
                    <span asp-validation-for="Planner.ClosingHymn" class="text-danger"></span>
                </div>
                <div class="form-group column third" id="closingPrayer">
                    <label asp-for="Planner.ClosingPrayer" class="control-label"></label>
                    <input asp-for="Planner.ClosingPrayer" class="form-control" />
                    <span asp-validation-for="Planner.ClosingPrayer" class="text-danger"></span>
                </div>
            </div>
            <div class="buttonWrap">
                <div class="form-group column third" id="submitbtn">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
                <div class="form-group column third" id="backLink">
                    <a asp-page="./Index">Back to List</a>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
