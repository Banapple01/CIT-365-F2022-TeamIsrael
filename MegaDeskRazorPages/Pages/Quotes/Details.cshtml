@page "{id:int?}"
@model MegaDeskRazorPages.Pages.Quotes.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Quote for @Html.DisplayFor(model => model.Quote.CustName)</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <h4>Details</h4>
        </dt>
        <dd class="col-sm-10">
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quote.CustName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quote.CustName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quote.QuoteDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quote.QuoteDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quote.Rush)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quote.Rush) days
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quote.Width)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quote.Width)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quote.Depth)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quote.Depth)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quote.Drawers)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quote.Drawers)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quote.Material)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quote.Material)
        </dd>
        <dt class="col-sm-2">
            <h4>Cost</h4>
        </dt>
        <dd class="col-sm-10">
        </dd>
        <dt class="col-sm-2">
            Base Cost
        </dt>
        <dd class="col-sm-10">
            $200
        </dd>
        <dt class="col-sm-2">
            Additional Area Cost
        </dt>
        <dd class="col-sm-10">
            $@Html.DisplayFor(model => model.Quote.SizePrice)
        </dd>
        <dt class="col-sm-2">
            Drawer Cost
        </dt>
        <dd class="col-sm-10">
            $@Html.DisplayFor(model => model.Quote.DrawerPrice)
        </dd>
        <dt class="col-sm-2">
            Surface Material Cost
        </dt>
        <dd class="col-sm-10">
            $@Html.DisplayFor(model => model.Quote.MatPrice)
        </dd>
        <dt class="col-sm-2">
            Rush Order Cost
        </dt>
        <dd class="col-sm-10">
            $@Html.DisplayFor(model => model.Quote.ShipPrice)
        </dd>
        <dt class="col-sm-2">
            <h3>@Html.DisplayNameFor(model => model.Quote.Total)</h3>
        </dt>
        <dd class="col-sm-10">
            <h3>$@Html.DisplayFor(model => model.Quote.Total)</h3>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Quote?.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
