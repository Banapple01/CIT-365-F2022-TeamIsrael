@page
@model MegaDeskRazorPages.Pages.Quotes.CreateModel

@{
    ViewData["Title"] = "Create New Quote";
}


<style>
    #wrapper { max-width: 500px; min-width: 450px;  margin: 30px auto;}

    .formWrap {border: solid black 2px; border-radius: 8px; padding: 15px; width: 100%;}
    .formRow { display: flex; padding: 5px 0; }
    .column { padding: 0 5px;}
    .third { width: 33%;}
    .half { width: 50%;}
    .twoThird {width: 75%;}

    .buttonWrap {margin: 30px auto 0 auto; width: 500px;display: flex; justify-content: space-around;}
    .addButton { background: #000000; border-radius: 8px; color: #ffffff; height: 40px; width: 120px; text-align: center;}
    .addButton:hover {background: #333333;}
    .buttonWrap a { text-decoration: none; line-height: 40px;}
</style>

<h1>Add Quote</h1>
<hr/>
<div id="wrapper">
<h5>Please fill the form below</h5>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="formWrap">
                <div class="formRow">
                    <div class="form-group column twoThird " id="custName">
                        <label asp-for="Quote.CustName" class="control-label"></label>
                        <input asp-for="Quote.CustName" class="form-control" />
                        <span asp-validation-for="Quote.CustName" class="text-danger"></span>
                    </div>
                    <div class="form-group column third" id="quoteDate">
                        <label asp-for="Quote.QuoteDate" class="control-label"></label>
                        <input asp-for="Quote.QuoteDate" class="form-control" />
                        <span asp-validation-for="Quote.QuoteDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="formRow">
                    <div class="form-group column third" id="width">
                        <label asp-for="Quote.Width" class="control-label"></label>
                        <input asp-for="Quote.Width" class="form-control" />
                        <span asp-validation-for="Quote.Width" class="text-danger"></span>
                    </div>
                    <div class="form-group column third" id="depth">
                        <label asp-for="Quote.Depth" class="control-label"></label>
                        <input asp-for="Quote.Depth" class="form-control" />
                        <span asp-validation-for="Quote.Depth" class="text-danger"></span>
                    </div>
                    <div class="form-group column third" id="drawers">
                        <label asp-for="Quote.Drawers" class="control-label"></label>
                        <input asp-for="Quote.Drawers" class="form-control" />
                        <span asp-validation-for="Quote.Drawers" class="text-danger"></span>
                    </div>
                </div>
                <div class="formRow">
                    <div class="form-group column twoThird" id="material">
                        <label asp-for="Quote.Material" class="control-label"></label>
                        <div class="form-control radio-btn">
                            <input type="radio" checked="checked" class="radio" value="oak" name="Material" />
                        <label class="control-label"><img src="~/images/oak.jpg" width="50" />  Oak $200</label>
                        </div>
                    <div class="form-control radio-btn">
                        <input type="radio" checked="checked" class="radio" value="laminate" name="Material" />
                        <label class="control-label"><img src="~/images/laminate.jpg" width="50"/>  Laminate $100</label>
                    </div>
                    <div class="form-control radio-btn">
                        <input type="radio" checked="checked" class="radio" value="pine" name="Material" />
                        <label class="control-label"><img src="~/images/pine.jpg" width="50" />  Pine $50</label>
                    </div>
                    <div class="form-control radio-btn">
                        <input type="radio" checked="checked" class="radio" value="rosewood" name="Material" />
                        <label class="control-label"><img src="~/images/rosewood.jpg" width="50" />  Rosewood $300</label>
                    </div>
                    <div class="form-control radio-btn">
                        <input type="radio" checked="checked" class="radio" value="veneer" name="Material" />
                        <label class="control-label"><img src="~/images/veneer.jpg" width="50" />  Veneer $125</label>
                    </div>
                        @*<select name="photoChoice" asp-for="Quote.Material" class="form-control">
                            <option value="" disabled selected hidden>Choose a material</option>
                            <option data-img_src="~/images/oak.jpg" value="oak">Oak</option>
                            <option data-img_src="~/images/laminate.jpg" value="laminate">Laminate</option>
                            <option data-img_src="~/images/pine.jpg" value="pine">Pine</option>
                            <option data-img_src="~/images/rosewood.jpg" value="rosewood">Rosewood</option>
                            <option data-img_src="~/images/veneer.jpg" value="veneer">Veneer</option>
                        </select>*@
                        <span asp-validation-for="Quote.Material" class="text-danger"></span>
                    </div>
                </div>
                <div class="formRow">
                    <div class="form-group column half" id="rush">
                        <label asp-for="Quote.Rush" class="control-label"></label>
                        <select asp-for="Quote.Rush" class="form-control">
                            <option value="" disabled selected hidden>Choose production time</option>
                            <option value="3">3 days</option>
                            <option value="5">5 days</option>
                            <option value="7">7 days</option>
                            <option value="14">14 days - Normal Time</option>
                        </select>
                        <span asp-validation-for="Quote.Rush" class="text-danger"></span>
                    </div>
                </div>
                    <div class="form-group column half" id="total">
                        <label asp-for="Quote.Total" class="control-label"></label>
                        <span asp-validation-for="Quote.Total" class="text-danger"></span>
                    </div>
                </div>
            <div class="buttonWrap">
                <div class="form-group" id="submit">
                    <input type="submit" value="Create" class="addButton" />
                </div>
                <div id="back">
                    <a asp-page="Index"><div class="addButton">Back to List</div></a>
                </div>
            </div>
        </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
